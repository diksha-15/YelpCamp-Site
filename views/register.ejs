<%- include("./partials/header") %>
<main class="container">
      <form class="login-register" action="/register" method="POST" >
        
        <div class="text-center mb-4">
          <img class="mb-4" src="./login_image.webp" salt="" width="100" height="100">
          <h1 class="h3 mb-3 font-weight-normal"><strong>Register</strong></h1>
        </div>

        <div class="form-group">
          <input id="username" class="form-control" title="May only contain a-z and 0-9" type="text" name="username" placeholder="Username (case sensitive)" required autofocus>
          <label for="username">Username (case sensitive)</label>
        </div>
       
        <div class="form-group">
          <input id="password" class="form-control" type="password" name="password" placeholder="Password (case sensitive)" required>
          <label for="password">Password (case sensitive)</label>
        </div>
        
        <button class="btn btn-lg btn-secondary btn-block" type="submit">Sign up</button>
        <a href="/campgrounds"><span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span> Go Back</a>
        
      </form>
    </main>

<%- include("./partials/footer") %>
