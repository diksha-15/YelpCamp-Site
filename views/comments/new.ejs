<%- include("../partials/header") %>
<main class="container">
      <form class="login-register" action="/campgrounds/<%=campground._id %>/comments" method="POST">  
        <div class="text-center mb-4">
          <h1 class="h3 mb-3 font-weight-normal"><strong>Add New Comment to </strong></h1> 
          <h1 class="h3 mb-3 font-weight-normal"><strong><%=campground.name%></strong></h1>
        </div>
        <div class="card text-white bg-secondary mb-3" style="width: 24rem;">
          <div class="card-body">
            <div class="form-group ">
               <input id="name" class="form-control" placeholder="Text" type="text" name="comment[text]">
              <label for="name">Text</label>
            </div>
            <button class="btn btn-outline-primary" type="submit">Submit</button>
            <a href="/campgrounds"><span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span> Go Back</a>
            </div>
          </div>
        </div>   
      </form>
    </main>
<%- include("../partials/footer") %> 

